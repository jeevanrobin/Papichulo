DATABASE_URL="file:./dev.db"
ALLOWED_ORIGINS="https://jeevanrobin.github.io,http://localhost:3001,http://localhost:3011,http://localhost:58995"
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX=120
JWT_SECRET="replace-with-long-random-secret"
JWT_EXPIRES_IN=7d
# Optional: when set, admin endpoints require header x-admin-key
# ADMIN_API_KEY="change-me"

# OTP Provider
# console: logs OTP in server terminal (local dev)
# twilio: sends real SMS OTP
OTP_PROVIDER=console
EXPOSE_DEBUG_OTP=true
OTP_MESSAGE_TEMPLATE="Your Papichulo OTP is {{OTP}}. Valid for {{MINUTES}} minutes."

# Required only when OTP_PROVIDER=twilio
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_FROM_NUMBER=
